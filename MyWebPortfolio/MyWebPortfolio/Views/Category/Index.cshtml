@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category panel</h1>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category category in Model){
            <tr>
                <td with= "50%">
                    @category.Name
                </td>
                <td width="35%">
                    @category.DisplayOrder
                </td>
            </tr>
        }

    </tbody>

</table>