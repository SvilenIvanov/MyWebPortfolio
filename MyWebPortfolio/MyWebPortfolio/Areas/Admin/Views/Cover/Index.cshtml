@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}


<partial name = "_Notification"/>

<div class=" container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controler="Cover" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Cover Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cover Cover in Model) {
                <tr>
                    <td with="50%">
                        @Cover.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role = "group">

                            <a asp-controller="Cover" asp-action="Edit" asp-route-id="@Cover.Id" 
                                 class="btn btn-primary btn-sm mx-2"> <i class="bi bi-pencil-square"></i> Edit
                        
                            </a>
                            <a asp-controller="Cover" asp-action="Delete" asp-route-id="@Cover.Id"
                           class="btn btn-danger btn-sm mx-2">
                                <i class="bi bi-trash"></i> Delete

                            </a>

                        </div>
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>
